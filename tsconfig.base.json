{
  "compilerOptions": {
    // Only apply solution-style settings to non-Angular parts of the workspace
    // "composite": true,
    // "declarationMap": true,
    // "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022", "dom"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "ES2022",
    "useDefineForClassFields": false,
    "customConditions": ["development"],
    "declaration": true,
    "baseUrl": ".",
    "paths": {
      "@clickatell-ws/product-catalog": ["apps/product-catalog/src/main.ts"],
      "@clickatell-ws/product-catalog/*": ["apps/product-catalog/src/*"]
    }
  }
}
